<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
  <%= devise_error_messages! %>

	<div class="field form-group">
		<%= f.label :name %><br />
		<%= f.text_field :name, autofocus: true, class: "form-control" %>
	</div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: false, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  
  <div class="field form-group">
  	<%= f.label :icon_name, 'Icon' %><br />
	<% get_icons.each do |image| %>
		<% title = image.split('/').last %>
		<label>
			<%= f.radio_button :icon_name, title %>	
			<%= image_tag title, size: "95", alt: title %>				
		</label>
	<% end %>
	<p style="font-size: 6px;">Made by <a href="http://www.flaticon.com/authors/freepik">FREEPIK</a></p>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
		</div>
	</div>


</div>
