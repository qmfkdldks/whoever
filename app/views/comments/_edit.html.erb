<%#= form_for([Article.find(comment.article_id), comment]) do |f| %>
<%= form_for(comment) do |f| %>
	<div class="row">
		<div class="form-group">
			<%= f.label :commenter, 'Name', class:"col-sm-2" %>
			<div class="col-sm-10">
				<%= f.text_field :commenter, class:"form-control" %>	
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<%= f.label :body, 'Content', class:"col-sm-2"%>
			<div class="col-sm-10">
			    <%= f.text_area :body, class:"form-control", rows:"5" %>
			</div>
		</div>
	</div>

	<div class="row" style="margin-top:20px;">
		<div class="form-group">
			<%= f.submit class:"btn btn-primary btn-sm", style:"float:right; margin-right:1%;"%>
		</div>
	</div>
    
<% end %>