<% @products.each do |product| %>

		<div class="col-xs-12 col-sm-6 col-md-4">
			<%= link_to image_tag(product.images.split(",")[0], class:"img-responsive", style:"margin:auto;"), product %>
			<div class="text-center">
				<p><%= product.name %></p>
				<strong style="color:#ed7999;">$<%= product.price %></strong>
				<p><%= product.description %></p>					
			</div>		
		</div>
			
<% end %>




	