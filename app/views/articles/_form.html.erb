
<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<div class="row">
		<div class="form-group">
		    <%= f.label :title %>
		    <%= f.text_field :title , class:"form-control"%>
		</div>
	</div>

	<div class="row">
	  	<div class="form-group">
		    <%= f.label :text %>
			<%= f.text_area :text, :class => 'cktexteditor form-control', rows:"25" %>
			
			<%#= f.text_area :text, :class => '' %>			
			<%#= f.cktext_area :text, :value => 'Default value', :id => 'sometext' %>
			<%#= cktext_area :text, :info, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}  %>
		</div>
	</div>
  
	<div class="row"  style="margin-top:20px;">
	  	<div class="form-group">
    		<%= f.submit class:"btn btn-primary btn-sm", style:"float:right; margin-right:1%;"%>
		</div>
	</div>
<% end %>
<%#= javascript_include_tag Ckeditor.cdn_url %>

